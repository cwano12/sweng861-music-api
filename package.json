{
    "name": "music-api",
    "version": "0.1.0",
    "description": "SWENG861 Project",
    "main": "server.js",
    "scripts": {
        "build": "tsc -p .",
        "build:watch": "tsc -w -p .",
        "format": "prettier --write './src/**/*.ts'",
        "format:check": "prettier --check './src/**/*.ts'",
        "lint": "node_modules/.bin/eslint './src/**/*.ts'",
        "start:dev": "npm run build:watch & nodemon --async-stack-traces ./dist/server.js",
        "start:local": "npm run build && node --async-stack-traces ./dist/server.js",
        "start": "node --async-stack-traces ./dist/server.js",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:verbose": "jest --verbose",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cwano12/sweng861-music-api.git"
    },
    "author": "cwano12",
    "license": "ISC",
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/jest": "^24.9.1",
        "@types/log4js": "^2.3.5",
        "@types/node": "^12.12.5",
        "@types/request-promise-native": "^1.0.17",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^2.6.0",
        "@typescript-eslint/parser": "^2.6.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-typescript": "^6.0.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.1",
        "jest": "^25.5.0",
        "jest-express": "^1.12.0",
        "nodemon": "^2.0.1",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^25.5.0",
        "ts-mockito": "^2.5.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@tsed/exceptions": "^5.53.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "log4js": "^5.3.0",
        "moment": "^2.27.0",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.8",
        "swagger-ui-express": "^4.1.2",
        "tsc": "^1.20150623.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "collectCoverageFrom": [
            "<rootDir>/**/*.ts",
            "!<rootDir>/**/*.vo.ts",
            "!<rootDir>/config/*",
            "!<rootDir>/server.ts"
        ],
        "testEnvironment": "node"
    }
}
